<?xml version="1.0"?>
<ruleset name="PORTFOLIO_PHP">
    <description>Analyse du code PHP avec PSR12</description>

    <!-- Règles à utiliser -->
    <rule ref="PSR12"/>

    <!-- Répertoires à exclure (à adapter selon ton projet) -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>

    <!-- Répertoires ou fichiers à analyser -->
    <file>.</file>
</ruleset>
